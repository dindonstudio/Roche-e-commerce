{% schema %}
{
  "name": "Breadcrumbs Apparel",
  "settings": [],
  "presets": [
    {
      "name": "Breadcrumbs Apparel",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<nav aria-label="Breadcrumb" class="breadcrumbs-apparel">
  <ol class="breadcrumb-list">
    <li class="breadcrumb-item">
      <a href="/collections/all">Tous les produits</a>
    </li>
    {% if collection.handle == 'apparel' %}
      <li class="breadcrumb-item">
        <h3>Apparel</h3>
      </li>
    {% elsif collection %}
      <li class="breadcrumb-item">
        <a href="/collections/apparel"><h3>Apparel</h3></a>
      </li>
      <li class="breadcrumb-item">
        <h3>{{ collection.title }}</h3>
      </li>
    {% endif %}
  </ol>
</nav>

<style>
  .breadcrumbs-apparel .breadcrumb-list {
    list-style: none;
    padding: 0;
  }

  .breadcrumbs-apparel .breadcrumb-item {
    display: inline;
    margin-right: 5px;
  }

  .breadcrumbs-apparel .breadcrumb-item + .breadcrumb-item::before {
    content: '>';
    margin-right: 5px;
  }
</style>
