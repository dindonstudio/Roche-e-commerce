{% schema %}
{
  "name": "Custom Footer",
  "settings": [],
  "blocks": [
    {
      "type": "footer-block",
      "name": "Footer Block",
      "settings": [
        {
          "type": "text",
          "label": "Title",
          "id": "title",
          "default": "Footer Block"
        },
        {
          "type": "link_list",
          "label": "Menu Link",
          "id": "menu"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="custom-footer">
  <div class="footer-blocks">
    {% for block in section.blocks %}
      {% if block.type == 'footer-block' %}
        <div class="footer-block">
          <h4>{{ block.settings.title }}</h4>
          <ul class="menu-links">
            {% for link in block.settings.menu.links %}
              <li>
                <a href="{{ link.url }}">{{ link.label }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .custom-footer {
    /* Your footer styling here */
  }

  .footer-blocks {
    /* Styling for the footer blocks container */
  }

  .footer-block {
    /* Styling for each footer block */
  }

  h4 {
    /* Styling for the block title */
  }

  .menu-links {
    /* Styling for the menu links */
  }
</style>
