{% schema %}
{
  "name": "Double collection",
  "settings": [
    {
      "type": "inline_richtext",
      "label": "Title",
      "id": "title",
      "default": "Double Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection_block",
      "name": "Collection Block",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
          "type": "text",
          "label": "Title",
          "id": "title",
          "default": "Collection Title"
        },
        {
          "type": "select",
          "label": "Title Color",
          "id": "title_color",
          "default": "blue",
          "options": [
            {
              "value": "white",
              "label": "White"
            },
            {
              "value": "black",
              "label": "Black"
            },
            {
              "value": "blue",
              "label": "Blue (#264A99)"
            }
          ]
        },
        {
          "type": "collection",
          "label": "Select Collection",
          "id": "collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "section",
      "name": "Double Sections Collections"
    }
  ]
}
{% endschema %}

<div class="custom-collection-section">
  <div class="container">
    <div class="section-title">
      <h1>{{ section.settings.title | rich_text }}</h1>
    </div>

    <div class="collection-blocks">
      {% for block in section.blocks %}
        <div class="collection-block">
          <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.title }}">
          <h2
            style="
              color:
              {% if block.settings.title_color == 'white' %}
                white
              {% elsif block.settings.title_color == 'black' %}
                black
              {% else %}
                #264A99
              {% endif %}
            "
          >
            {{ block.settings.title }}
          </h2>
          <a href="{{ block.settings.collection_url }}" class="btn">Shop Now</a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  /* Add your custom CSS styles here */
  .custom-collection-section {
    /* Define section styles */
  }

  .section-title {
    /* Define title styles */
  }

  .collection-blocks {
    display: flex;
    justify-content: space-between;
    /* Add styles for block container */
  }

  .collection-block {
    flex: 1;
    /* Add styles for each block */
  }
</style>
