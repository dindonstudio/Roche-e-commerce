{% schema %}
{
  "name": "About",
  "settings": [],
  "blocks": [
    {
      "type": "about_block",
      "name": "About Block",
      "settings": [
        {
          "type": "text",
          "label": "Title",
          "id": "title",
          "default": "About Us"
        },
        {
          "type": "textarea",
          "label": "Text",
          "id": "text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        },
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
          "type": "image_picker",
          "label": "Background Image",
          "id": "background_image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="about-section">
  <div class="container">
    {% for block in section.blocks %}
      <div
        class="about-block"
        style="background-image: url('{{ block.settings.background_image | img_url: 'large' }}');"
      >
        <h3>{{ block.settings.title }}</h3>
        <div class="centered-text">
          <p>{{ block.settings.text }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="full-width-image">
    {% for block in section.blocks %}
      <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
    {% endfor %}
  </div>
</div>

<style>
  /* Add your custom CSS styles here */
  .about-section {
    padding: 10rem 0 4rem;
    background-color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
  }

  .about-block {
    height: 60vh;
    overflow: visible;
    margin-bottom: 2rem;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    padding: 20px 0 10rem;
    background-blend-mode: exclusion;
    background-color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .about-section h3 {
    font-size: 24px;
    font-weight: bold;
  }

  .centered-text {
    text-align: center;
  }

  .about-section p {
    font-size: 20px;
    line-height: 1.5;
  }

  .full-width-image img {
    width: 100%;
    height: auto;
  }

  /* Mobile Styles */
  @media (max-width: 767px) {
    .about-section {
      padding: 4rem 0 4rem;
    }
    .about-block {
      padding: 10px;
      height: 100%;
    }

    .about-section h3 {
      font-size: 19px;
      padding-top: 0;
    }

    .about-section p {
      font-size: 14px;
    }
  }
</style>
