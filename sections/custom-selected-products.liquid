{% schema %}
{
  "name": "Best Sellers Section",
  "settings": [
    {
      "type": "text",
      "id": "section_text",
      "label": "Section Text",
      "default": "Our Best Sellers"
    }
  ],
  "blocks": [
    {
      "type": "blocks",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "checkbox",
          "id": "is_limited_edition",
          "label": "Is this a limited edition product?",
          "default": false
        },
        {
          "type": "text",
          "id": "limited_edition_text",
          "label": "Limited Edition Text",
          "default": "Limited Edition",
          "info": "Only applies if the product is marked as limited edition."
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "section",
      "name": "Selection de produits"
    }
  ]
}
{% endschema %}

<div class="best-sellers-container">
    <div class="scroll-arrow left-arrow"><span>←</span></div> <!-- Left arrow -->
    <div class="scroll-arrow right-arrow"><span>→</span></div> <!-- Right arrow -->
  <div class="best-sellers-scrollable">
    <div class="title__flip">
        <h2><div>
            {{ section.settings.section_text }}
        </div></h2>
    </div>
    {% for block in section.blocks %}
      {% if block.type == 'blocks' %}
        {% assign product = all_products[block.settings.product] %}
        <div class="{% if block.settings.is_limited_edition %}limited-edition-product{% else %}product{% endif %}">
            <h4 class="limited__text">{{ block.settings.limited_edition_text }}</h4>

          <a class="product__link" href="{{ product.url }}">
            {% if block.settings.is_limited_edition %}
            {% endif %}
            <img
              src="{{ product.featured_image | img_url: 'x1024' }}"
              alt="{{ product.title }}"
            >
            <div class="product__details">
                <h3>{{ product.title }}</h3>
                <h3 class="price">{{ product.price | money }}</h3>
            </div>
    
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
    .scroll-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    z-index: 10;
    font-size: 20px;
    background-color: black;
  border-radius: 50%;
    padding: 2px 10px;
    color: white;
}
.scroll-arrow span{
    font-size: 20px;
    position: relative;
    top: 0.2rem;
}
.left-arrow {
    left: 10px;
}

.right-arrow {
    right: 10px;
}

/* Existing styles remain unchanged */

  .best-sellers-container {
    overflow: hidden;
    position: relative;
    padding: 12rem 0;
  }

  .best-sellers-scrollable {
    display: flex;
    flex-direction: row;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch; /* For iOS smooth scrolling */
    flex-wrap: nowrap;
    overflow-y: hidden;
    transition: scroll-left 0.3s ease;

  }

  .best-seller-product {
    display: inline-block;
    flex: 0 0 auto;
    margin-right: 20px;
    scroll-snap-align: start;
  }

  .product,
  .limited-edition-product {

 /* height: 40vw; */
border: 1px solid black;

  }
.product img,  .limited-edition-product img{
    height: 30vw;
    width: auto;
    border-bottom: 1px solid black;
}
  .limited-edition-product {
    /* height: 43vw;
    transform: translateY(-3vw); */
position: relative;
background-color: #264a99;
  }
.price{
    font-family: 'CustomFont-Light';
}
  .limited-edition-product h4 {
    background-color: #E55041;
    padding: 5px;
    margin-bottom: 10px;
    text-align: center;
    color: white;
    display: block
  }

  .limited-edition-product h3 {
    font-size: 1.5rem;
    color: white;
    text-decoration: none;
  }
  .product h3{
    text-decoration: none;
    color: black;
    font-size: 1.5rem;
  }
  .product h4{
    display: none;
  }
  .title__flip{
    width: 200px;
    display: flex;
    justify-content: center;
  }

  .title__flip h2{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 200px;
font-size: 56px;
font-weight: 600;
  }
  .title__flip h2 div{
    transform: rotate(-90deg);
    white-space: nowrap;
    color: black;

}

.product__details{
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 2rem;
}
.limited__text{
    position: absolute;
    top: -2rem;
    right: 0rem;
    width: 100%;
    text-transform: uppercase;
    font-family: 'CustomFont-Regular';
}

</style>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const scrollContainer = document.querySelector('.best-sellers-scrollable');
        const scrollAmount = 300; // Change this value based on desired scroll amount
    
        function smoothScroll(amount) {
            scrollContainer.style.scrollBehavior = 'smooth';
            scrollContainer.scrollLeft += amount;
            setTimeout(() => {
                scrollContainer.style.scrollBehavior = 'auto';
            }, 300); // Duration should match the CSS transition time
        }
    
        document.querySelector('.left-arrow').addEventListener('click', function() {
            smoothScroll(-scrollAmount);
        });
    
        document.querySelector('.right-arrow').addEventListener('click', function() {
            smoothScroll(scrollAmount);
        });
    });
    </script>
    